<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ServicedForBusiness" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:background">@color/white</item>
        <item name="colorPrimary">#678FB4</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/light_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#03A9F4</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="android:navigationBarColor">@color/light_blue</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>

    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="cardBackgroundColor">@color/light_blue</item>
        <item name="android:textColor">@color/orange</item>
        <item name="checkedIconTint">@color/white</item>
    </style>

</resources>